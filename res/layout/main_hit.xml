<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="#F9BFBE"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="#F9BFBE" >
    <ImageView
        android:id="@+id/hitbg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/schrank_ohne_bg3" />

    <ImageView
        android:id="@+id/hitimage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/hit_image"
        android:visibility="invisible" />

    <com.google.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-8965667112233878/1754571440"
        ads:loadAdOnCreate="true"
        ads:testDevices="TEST_EMULATOR, 36979460B4288FC3"
        android:gravity="center" >
    </com.google.ads.AdView>

    </FrameLayout>
    
</LinearLayout>
